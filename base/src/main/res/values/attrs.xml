<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BaseTextView">
        <attr name="customTypeface" format="string" />
        <attr name="android:maxLines" />
        <attr name="android:tint" />
        <attr name="android:textAllCaps" />
        <attr name="enableHtml" format="boolean" />
    </declare-styleable>


    <declare-styleable name="BaseImageViewLoading">
        <attr name="gradientImage" format="reference" />
        <attr name="android:src" />
        <attr name="indeterminateDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProgressViewApplication">
        <attr name="indeterminateDrawable" />
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:tint" />
    </declare-styleable>
    <declare-styleable name="BaseSwipeRefreshLayout">
        <attr name="progressBackgroundColor" format="color"/>
        <attr name="progressColor" format="color" />
    </declare-styleable>
</resources>