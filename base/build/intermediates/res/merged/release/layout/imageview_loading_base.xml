<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/FillHeight.FillWidth">

    <android.base.ui.widget.BaseImageView
        android:id="@id/imageview_loading_baseImageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <android.base.ui.widget.BaseImageView
        android:id="@id/imageview_loading_baseImageView_gradient"
        style="@style/FillWidth.WrapHeight"
        android:layout_gravity="center" />

    <android.base.ui.widget.BaseProgressBar
        android:id="@id/imageview_loading_progressViewApp"
        style="@style/WrapWidth.WrapHeight"
        android:layout_gravity="center"
        android:gravity="center"
        android:indeterminate="true"
        android:visibility="visible" />

</FrameLayout>
